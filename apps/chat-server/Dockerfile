# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build chat-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t chat-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system chat-server && \
          adduser --system -G chat-server chat-server

COPY dist/apps/chat-server chat-server
RUN chown -R chat-server:chat-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix chat-server --omit=dev -f install

EXPOSE 3000 3002

CMD [ "node", "chat-server" ]
